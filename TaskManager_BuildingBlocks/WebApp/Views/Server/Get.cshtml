@{
    //This is the api for the data in graphs in the detail.cshtml layout is JSON
    Layout = "";
    int i = 0;
}
{@foreach (var item in ViewData["metricData"] as List<BusinessLayer.Metric>)
{
    <text>\"@i\": {\"Id\": @item.MetricId, \"Value\": @item.Value, \"Date\": \"@item.Date\"},</text>
    i += 1;
}
